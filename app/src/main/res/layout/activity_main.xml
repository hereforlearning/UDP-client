<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EdIpServeur"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="192.168.0.108" />

        <EditText
            android:id="@+id/EdPort"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="51234" />

        <EditText
            android:id="@+id/EdText"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="akjsdfuewirmzxcvhbreith32434" />

        <EditText
            android:id="@+id/EdNbRepete"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1" />

        <Button
            android:id="@+id/btSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Send Message" />

        <Button
            android:id="@+id/bshutdown"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="关机" />

        <Button
            android:id="@+id/babordshutdown"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:text="取消关机" />

        <TextView
            android:id="@+id/tvudpresult"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:text="udpresult" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>